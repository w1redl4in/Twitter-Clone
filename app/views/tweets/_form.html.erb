<%= simple_form_for(@tweet) do |f| %>
  
  <div class="field">
    <div class="control">
      <%= f.input :tweet, label: "Compose new Tweet", input_html: { class: "textarea"}, wrapper: false, label_html: {class: "label"}, placeholder: "What's happening?" %>
    </div>
  </div>
  <%= f.button :submit, "Tweet!", class: "button is-info" %>
<% end %>