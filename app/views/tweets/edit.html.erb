								<div class="level">
									<div class="level-left is-mobile">
										<%= link_to root_path, class: "level-item" do %>
											<span class="fa fa-twitter"></span>
										<% end %>
							 			<%= link_to @tweet, method: :delete, data: { confirm: "VocÃª tem certeza que quer deletar este tweet?"} do %>
											<span class="fa fa-trash" style="color: #E0245E;"></span>
										<% end %>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>