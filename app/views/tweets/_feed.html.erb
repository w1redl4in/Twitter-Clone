<div class="column is-half">
	<article class="media box">
		<figure class="media-left">
			<p class="image is-64x64">
				<img src="https://bulma.io/images/placeholders/64x64.png">
			</p>
		</figure>
		<div class="media-content">
			<div class="content">
				<%= render 'tweets/form' %>
			</div>
		</div>
	</article>


<% @tweets.each do |tweet| %>
	<div class="box">
		<article class="media">
			<div class="media-left">
				<figure class="image is-64x64">
					<img src="https://bulma.io/images/placeholders/64x64.png">
				</figure>
			</div>

			<div class="media-content">
				<div class="content">
					<strong>Felipe Austríaco</strong>
					<small>@liloOnRails</small>
					<p><%= tweet.tweet %></p>
				</div>

				<div class="level">
					<div class="level-left is-mobile">
						<%= link_to tweet, class: "level-item" do %>
							<span class="fa fa-link"></span>
						<% end %>

						<%= link_to edit_tweet_path(tweet), class: "level-item" do %>
							<span class="fa fa-edit"></span>
						<% end %>

						<%= link_to tweet, method: :delete, data: { confirm: "Você tem certeza que quer deletar este tweet?"} do %>
							<span class="fa fa-trash"></span>
						<% end %>
					</div>
				</div>
			</div>
		</article>
	</div>
<% end %>
</div>